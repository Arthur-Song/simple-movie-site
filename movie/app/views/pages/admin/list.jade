extends ../../layout
block content
   .container
      .row
         table.table.table-hover.table-striped.table-responsive
            thead
               tr
                  th 电影名称
                  th 导演
                  th 国家
                  th 上映日期
                  th 录入时间
                  th 查看
                  th 更新
                  th 删除
            tbody
               each item in movies
                  tr(class="item-id-#{item._id}")
                     td #{item.title}
                     td #{item.director}
                     td #{item.country}
                     td #{moment(item.publishDate).format("YYYY年MM月DD日")}
                     td #{moment(item.meta.lastModified).format("YYYY年MM月DD日")}
                     td: a(href="/movie/#{item._id}",target="_blank").btn.btn-default 查看
                           span.glyphicon.glyphicon-eye-open(style="padding-left:10px")
                     td: a(href="/admin/movie/edit/#{item._id}",target="_self").btn.btn-primary 编辑
                           span.glyphicon.glyphicon-edit(style="padding-left:10px")
                     td: button(type="button",data-id="#{item._id}").btn.btn-danger.del 删除
                           span.glyphicon.glyphicon-trash(style="padding-left:10px")
   script(type="text/javascript",src="/js/admin.js")
