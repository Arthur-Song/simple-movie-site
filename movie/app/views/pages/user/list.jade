extends ../../layout

block content
   .container
      .row
         table.table.table-hover.table-striped.table-responsive
            thead
               tr
                  th 用户名
                  //-th 密码
                  th 注册日期
                  th 最新修改日期
                  th 查看
                  th 更新
                  th 删除
            tbody
               each item in users
                  tr(class="item-id-#{item._id}")
                     td #{item.username}
                     //-td #{item.password}
                     td #{moment(item.meta.createAt).format("YYYY年MM月DD日 HH时mm分")}
                     td #{moment(item.meta.lastModified).format("YYYY年MM月DD日 HH时mm分")}
                     td: a(href="#",target="_blank").btn.btn-default 查看
                        span.glyphicon.glyphicon-eye-open(style="padding-left:10px")
                     td: a(href="#",target="_self").btn.btn-primary 编辑
                        span.glyphicon.glyphicon-edit(style="padding-left:10px")
                     td: button(type="button",data-id="#{item._id}").btn.btn-danger.del 删除
                        span.glyphicon.glyphicon-trash(style="padding-left:10px")
